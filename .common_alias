# git
alias gitinit="git commit --allow-empty -m 'Init commit'"
gitupstream() { git remote add upstream $1; }
gitupfetch() { git fetch upstream; git checkout main; git merge upstream/main; }
alias gitchmod="git update-index --add --chmod=+x"
alias ga="git add"
alias gb="git branch -a"
