cargobin() {
  git clone git@github.com:karanabe/rust-template.git ./$1;
  cd $1;
  rm -rf .git;
  git init;
  git commit --allow-empty -m 'Init commit';
  grep -rl 'rust-template' . | xargs sed -i -e "s/rust-template/$1/g";
}

